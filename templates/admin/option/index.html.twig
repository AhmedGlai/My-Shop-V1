{% extends 'base.html.twig' %}
{% block title 'Generate_Offers' %}
    {% block body %}
        <div class="container mt-4">
            <h1>Generate OPTIONS</h1>
            <div class="alert alert-success">
                {% for msg in app.flashes('success') %}
                    {{ msg }}
                {% endfor %}
            </div>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Title</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                {% for option in options %}
                <tr>
                    <td>{{ option.name }}</td>
                    <td>
                        <a href="{{ path('admin.option.edit', { id: option.id}) }}" class="btn btn-primary">Edite</a>
                        <form method="post" action="{{ path('admin.option.delete', { id: option.id }) }}" style="display: inline-block" onsubmit="return confirm('ARE YOU SURE YOU WANT TO DELETE?!')">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete'~option.id) }}">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>

                </tbody>
                {% endfor %}
            </table>
            <div>
                <a href="{{ path('admin.option.new') }}" class="btn btn-success">Create New Estate</a>
            </div>
        </div>
    {% endblock body %}
