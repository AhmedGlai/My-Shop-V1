{% extends 'base.html.twig' %}

{% block title %}

{% block body %}
    <div class="container mt-4">
        <h1>Generate Offers</h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for prop in property %}
                <tr>
                    <td>{{ prop.title }}</td>
                    <td>
                        <a href="{{ path('admin.property.edit',{ id: prop.id}) }}" class="btn btn-primary">Edite</a>
                    </td>
                </tr>

            </tbody>
            {% endfor %}
        </table>
    </div>
{% endblock body %}
{% endblock %}
